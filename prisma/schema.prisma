generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id String @id @default(uuid())
  title String @db.VarChar(255)
  description String?
  status Status @default(PENDING)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum Status{
  PENDING
  IN_PROGRESS
  COMPLETED
}
